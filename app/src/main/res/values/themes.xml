<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.LoopSocialMedia" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/background</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimaryContainer">@color/primary_dark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/background</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>
        <item name="colorOnSecondaryContainer">@color/secondary_dark</item>

        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/accent</item>
        <item name="colorOnTertiary">@color/background</item>
        <item name="colorTertiaryContainer">@color/accent_light</item>
        <item name="colorOnTertiaryContainer">@color/accent_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>

        <!-- Text colors -->
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/background</item>
        <item name="colorErrorContainer">@color/error</item>
        <item name="colorOnErrorContainer">@color/background</item>

        <!-- Outline colors -->
        <item name="colorOutline">@color/text_disabled</item>
        <item name="colorOutlineVariant">@color/surface_variant</item>

        <item name="colorScrim">@color/semi_transparent</item>
        <item name="colorSurfaceTint">@color/primary</item>

        <!-- System bars -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>
